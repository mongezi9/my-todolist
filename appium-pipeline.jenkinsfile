pipeline {
  agent {
    docker {
      image 'node:6-alpine'
      args '-p 3000:3000'
    }
  }
  environment {
    CI = 'true'
  }
  stages {
    stage('Build') {
      steps {
        sh 'npm install'
      }
    }
   
    stage('Image Build'){
      steps {
         sh "docker -v"
         sh "docker build -t my_to_do_list ."
         echo "Image build complete"
      }
        
    }
    
     stage('Test') {
      steps {
        sh './jenkins/scripts/test.sh'
      }
    }
    
  }
}
